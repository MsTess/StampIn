<div class="hero-image">
  <div class="banner-container">
    <h1 class="hero-text">TRAVEL VISA INFORMATION</h1>
    <p class="hero-comment"></p>
  <div class="banner-container">
    <p class="FAQ-comment">Some travel plans require a visa. Use StampIn to find out which one you need, and get more stamps in your passport.</p>
  </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 col-lg-10 col-sm-10">

<!--               <div class="col-6"> -->
      <div class="bg-white rounded p-3 shadow-lg">
        <div class="form">
          <%= simple_form_for(@visa_result) do |f| %>
          <%= f.input :origin_country, input_html: {class: "country_input", required: true}, collection: @countries, label: 'Where are you from?'%>
          <%= f.input :destination_country, input_html: {class: "country_input", required: true}, collection: @countries, label: 'Where do you want to go?'%>
          <%= f.submit "Get Visa Info", class: 'orange-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
