<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 col-lg-10 col-sm-10">
      <h1>Travel Visa Information   <i class="fa fa-plane" aria-hidden="true"></i></h1>
      <div id="site_info">
        <p>Some travel plans require a visa. Answer the questions below to ensure that your trip goes as smoothly as possible.</p>
      </div>
<!--               <div class="col-6"> -->
      <div class="bg-white rounded p-3 shadow">
        <div class="form">
          <%= simple_form_for(@visa_result) do |f| %>
          <%= f.input :origin_country, input_html: {class: "country_input", required: true}, collection: @countries, label: 'Where are you from?'%>
          <%= f.input :destination_country, input_html: {class: "country_input", required: true}, collection: @countries, label: 'Where do you want to go?'%>
          <%= f.submit "Get Visa Info", class: 'blue_button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>