<div class="container py-5">
<h1>Where do you want to go?</h1>
  <div class="row">
    <div class="col-6">
      <div class="bg-white rounded p-3 shadow">
        <div class="form">
          <%= simple_form_for(@visa_result) do |f| %>
            <%= f.input :origin_country, collection: @countries %>
            <%= f.input :destination_country, collection: @countries%>
            <%= f.submit class: 'red_button'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
