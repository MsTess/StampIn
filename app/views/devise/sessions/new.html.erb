<div class="hero-image">
  <div class="banner-container">
    <h1 class="hero-text">TRAVEL VISA INFORMATION</h1>
<p class="hero-comment">Some travel plans require a visa. Use StampIn to find out which one you need, and get more stamps in your passport.</p>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
      <div class="bg-white rounded p-3 shadow-lg">
        <div class="form">
          <div class="register">
           <h2>Login Details</h2>

                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-inputs">
                    <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %>
                    <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password" } %>
                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                  </div>

                  <div class="form-actions justify-content-center">
                    <%= f.submit class: 'orange-button', value: "Login" %>
                  </div>
                <% end %>
                <%= render "devise/shared/links" %>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
