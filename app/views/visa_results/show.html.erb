<div class="container py-5">
  <div class="col-12">
    <div class="bg-white rounded p-5 shadow">
      <div class="visa_results_heading">
        <div class="row justify-content-center">
          <h3>Visa from <%= @o_c.name %> to <%= @d_c.name %></h3>
        </div>
        <hr class="my-4">
        <div class="row justify-content-left">
          <%= link_to "Find out more about your destination", country_path(@d_c), style:"text-decoration: none;", class:"gray_link" %>
          <i class="fas fa-globe-americas"></i>
        </div> 
        <div class="row justify-content-center">
          <div class="round_border_red">
            <%= @visa_result.visa_modality.capitalize.gsub(/_/,' ') %>
            <%= @visa_result.evisa_modality.capitalize.gsub(/_/,' ') %>
          </div>      
        </div>
      </div>
      <div class="visa_results_heading">
        <div class="row justify-content-left">
          <h5 class="p-4">View embassy information:</h5>
        </div>
      </div>
      <div class="grid-container">
        <% if @embassies %>
          <% @embassies.each do |embassy| %>
            <%= link_to embassy, style:"text-decoration: none; color: black" do %>
              <div class="justify-content-center">
                <%# <div class="col"> %>
                  <div class="round_border_gray">
                    <h6>Embassy of <%= embassy.own_country.name %>, in <%= embassy.in_city %>, <%= embassy.host_country.name %></h6>
                  </div>
                <%# </div> %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <div class="col m-3 p-3">
            <div class="row justify-content-left">
              <h6 class="card-title">No embassies found!</h6>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


<div class="row justify-content-center">
  <%= link_to "Save", user_bookmark_visa_results_path(@user, bookmark_visa_result: {visa_result_id: @visa_result.id}), method: :post, style:"text-decoration: none;" %>
</div>