<div class="container py-5">
  <div class="row">
    <div class="col-6">
      <div class="bg-white rounded p-5 shadow" style="opacity: 0.9;">
        <h3 class="display-4-modified">Embassy of <%= @embassy.own_country.name %> in <%= @embassy.in_city %>, <%= @embassy.host_country.name %></h3>
        <div class="form-container">
          <hr class="my-4">
          <% unless @embassy.address.strip.empty? %>
          <h6 class="lead">Street Address: <i><%= @embassy.address %></i></h6>
          <hr class="my-4">
          <% end %>
          <% unless @embassy.emails.strip.empty? %>
          <h3 class="lead">E-Mail Address: <%= mail_to @embassy.emails, "#{@embassy.emails}", subject: "#{@embassy.own_country.name} visa query", body: "Hello, I am a citizen of #{@embassy.host_country.name}, and I am emailing to enquire as to what documents I need for a visa to visit #{@embassy.own_country.name}. Thank you for your time." %></h3>
          <hr class="my-4">
          <% end %>
          <% unless @embassy.url.strip.empty? %>
          <h5 class="lead">Web Address: <%= link_to @embassy.url, @embassy.url, target: '_blank' %></h5>
          <hr class="my-4">
          <% end %>
          <div class="row justify-content-center">
          <%= link_to "Bookmark Embassy", user_bookmark_embassies_path(@user, bookmark_embassy: {embassy_id: @embassy.id}), method: :post, style:"text-decoration: none;", class: "blue-button-modified" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-6 shadow border border-light align-middle p-1">
      <div id="map"
            style="width: 100%; height: 100%;"
            data-markers="<%= @markers.to_json %>"
            >
      </div>
    </div>
  </div>
</div>