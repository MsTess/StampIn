<div class="container py-5">
  <div class="row">
    <div class="col-6">
      <div class="bg-white rounded p-3 shadow" style="opacity: 0.9;">
        <h2 class="display-4">Embassy of <%= @embassy.own_country.name %>, <%= @embassy.in_city %>, <%= @embassy.host_country.name %></h1>
        <div class="form-container">
          <hr class="my-4">
          <h6 class="lead">Street Address: <i><%= @embassy.address %></i></h6>
          <hr class="my-4">
          <h3 class="lead">E-Mail Address: <i><%= @embassy.emails ? @embassy.emails : "E-Mail address not available" %></i></h3>
          <hr class="my-4">
          <h5 class="lead">Web Address: <i><%= @embassy.url? ? @embassy.url : "Web address not available" %></i></h5>
          <hr class="my-4">
          <div class="row justify-content-center">
          <%= link_to "Save", user_bookmark_embassies_path(@user, bookmark_embassy: {embassy_id: @embassy.id}), method: :post, style:"text-decoration: none;" %>
          </div>
          <h5 class="btn btn-dark"> <%= link_to "Google Maps", @embassy.url, style:"text-decoration: none; color: white" %></h5>
          <div id="map"
            style="width: 100%; height: 600px;"
            data-markers="<%= @markers.to_json %>"
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

